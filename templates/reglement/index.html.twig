{% extends 'base.html.twig' %}

{% block title %}Gestion des Reglements{% endblock %}

{% block body %}


    <div class="container" style="margin-top: 5%">
        <h1>Gestion des Reglements</h1>
        <div class="form-group">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-4">{{ form_row(form.facture,{ 'label': 'Facture' })}}</div>
            </div>
            <button type="submit" class="btn btn-success" style="margin-top: 2%">Verifier</button>
            {{ form_end(form) }}
        </div>
    </div>



    <div class="container" style="margin-top: 5%">
        <h1> Etat des Factures</h1>
        <table class="table table-hover table-active" style="margin-top: 3%">
            <tr>
                <th>ID</th>
                <th>PRENOM</th>
                <th>NOM</th>
                <th>VILLAGE</th>
                <th>NUMERO COMPTEUR</th>
                <th>LITRE</th>
                <th>SOMME A PAYER</th>
                <th>DATE LIMITE DU PAIEMENT</th>
                <th>ETAT DU COMPTEUR</th>
                <th>ETAT DU PAIEMENT</th>
                <th>ACTION</th>
            </tr>
            {% for tabls in tabl %}
                <tr>
                    <td>{{ tabls.id}}</td>
                    <td>{{ tabls.facture.consommation.compteur.abonnes.client.prenom }}</td>
                    <td>{{ tabls.facture.consommation.compteur.abonnes.client.nom }}</td>
                    <td>{{ tabls.facture.consommation.compteur.abonnes.client.villages }}</td>
                    <td>{{ tabls.facture.consommation.compteur.numcompteur }}</td>
                    <td>{{ tabls.facture.consmensuelle}} L</td>
                    <td>{{ tabls.facture.prix }} CFA</td>
                    <td>{{ tabls.facture.datelimitepaye | date('d/m/Y') }}</td>
                    <td>{{ tabls.etatcompteur }}</td>
                    <td>{{ tabls.etatpaiement }}</td>
                    <td>
                        <a href="{{ path('reglement_delete',{'id': tabls.id}) }}" class="btn btn-outline-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}

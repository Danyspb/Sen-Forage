{% extends 'base.html.twig' %}

{% block title %}Enregistrement Client{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 5%">
        <h1> Ajout d'un Nouveau Client</h1>
        <div class="form-group">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-4">{{ form_row(form.nom,{'attr':{'placeholder': 'Saisissez le nom'}}) }}</div>
                <div class="col-md-4">{{ form_row(form.prenom,{'attr':{'placeholder': 'Saisissez le prenom'}}) }}</div>
            </div>
            <div class="row">
                <div class="col-md-4">{{ form_row(form.telephone,{'attr':{'placeholder': 'Saisissez le numero de telephone'}}) }}</div>
                <div class="col-md-4">{{ form_row(form.villages,{'attr':{'placeholder': 'Saisissez le nom du chef de village'}}) }}</div>
            </div>
            <button type="submit" class="btn btn-success" style="margin-top: 2%">Ajouter</button>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="container">
        <table class="table table-hover table-active " style="max-height:300px;">
            <tr style="background-color: #d39e00;">
                <th>ID</th>
                <th>NOM</th>
                <th>PRENOM</th>
                <th>TELEPHONE</th>
                <th>VILLAGE</th>
                <th>CHEF du VILLAGE</th>
                <th>ACTION</th>
            </tr>
            {% for cli in clis %}
            <tr>
                <td>{{ cli.id}}</td>
                <td>{{ cli.nom}}</td>
                <td>{{ cli.prenom}}</td>
                <td>{{ cli.telephone}}</td>
                <td>{{ cli.villages.nom}}</td>
                <td>{{ cli.villages.chefvillage}}</td>
                <td>
                    <a href="{{ path('clients_delete', {'id': cli.id})}}" class="btn btn-outline-danger">Supprimer</a>
                    <a href="{{ path('clients_edit',{'id': cli.id})}}" class="btn btn-outline-secondary">modifier</a>
                   <a href="{{ path('abonnes') }}" class="btn btn-outline-info">Abonnement</a>
                </td>
            </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}

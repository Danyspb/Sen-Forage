{% extends 'base.html.twig' %}

{% block title %}Enregistrement des Villages{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 5%">
        <h1> Enregistrement des Villages</h1>
        <div class="form-group">
            {{ form_start(form) }}
            <div class="form-group col-md-6">
                {{ form_row(form.nom,{'attr':{'placeholder': 'Saisissez le nom du vilage'}}) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_row(form.chefvillage,{'attr':{'placeholder': 'Saisissez le nom du chef de village'}}) }}
            </div>

            <button type="submit" class="btn btn-success" style="margin-top: 2%">Enregistrer</button>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="container">
        <table class="table table-hover table-active" style="margin-top: 5%">
            <tr>
                <th>ID</th>
                <th>Nom du Village</th>
                <th>Nom du chef de Village</th>
                <th>Action</th>
            </tr>
            {% for village in villages %}
                <tr>
                    <td>{{ village.id }}</td>
                    <td>{{ village.nom }}</td>
                    <td>{{ village.chefvillage }}</td>
                    <td>
                        <a href="{{ path('village_delete', {'id': village.id})}}" class="btn btn-outline-danger">Supprimer</a>
                        <a href="{{ path('village_edit', {'id': village.id}) }}" class="btn btn-outline-secondary">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Attribution des Compteurs{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 5%">
        <h1> Enregistrement des Compteurs</h1>
        <div class="form-group">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-4">{{ form_row(form.numcompteur,{'attr':{'placeholder': 'Saisissez le Numero du Compteur'}}) }}</div>
                <div class="col-md-4">{{ form_row(form.abonnes,{'attr':{'placeholder': 'Saisissez le numero de telephone'}}) }}</div>
            </div>
            <button type="submit" class="btn btn-success" style="margin-top: 2%">Attribuer</button>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="container">
        <table class="table table-hover table-active" style="margin-top: 5%">
            <tr>
                <th>ID</th>
                <th>NUMERO DU COMPTEUR</th>
                <th>PRENOM</th>
                <th>NOM</th>
                <th>VILLAGE</th>
                <th>ACTION</th>
            </tr>
            {% for comps in comp %}
                <tr>
                    <td>{{ comps.id }}</td>
                    <td>{{ comps.numcompteur }}</td>
                    <td>{{ comps.abonnes.client.prenom }}</td>
                    <td>{{ comps.abonnes.client.nom }}</td>
                    <td>{{ comps.abonnes.client.villages.nom }}</td>
                    <td>
                        <button class="btn btn-outline-warning">Modifier</button>
                        <a href="{{ path('compteur_delete', {'id': comps.id})}} " class="btn btn-outline-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
